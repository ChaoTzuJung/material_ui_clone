{
  "name": "chips",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "lerna run dev --parallel",
    "dev:nonstory": "lerna run dev:nonstory --parallel",
    "build": "lerna run build --stream",
    "clean": "lerna run clean --parallel",
    "storybook": "lerna run storybook --parallel",
    "prettier:write": "prettier --write .",
    "eslint:fix": "eslint --fix .",
    "stylelint:fix": "stylelint packages/**/src/**/*.{css,scss,sass} --fix",
    "prepare": "husky install",
    "release": "lerna version --conventional-commits --yes",
    "release:alpha": "lerna version prerelease --conventional-commits --yes",
    "release:beta": "lerna version prerelease --preid beta --conventional-commits --yes"
  },
  "lint-staged": {
    "*.{html,css,scss,json}": [
      "prettier --write"
    ],
    "*.{html,css,scss}": [
      "stylelint --fix"
    ],
    "**/*.{js,jsx,tsx,ts}": [
      "prettier --write",
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@commitlint/config-conventional": "^12.1.4",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.5",
    "postcss-loader": "^6.1.1",
    "prettier": "^2.3.1",
    "stylelint": "^13.13.1",
    "stylelint-config-css-modules": "^2.2.0",
    "stylelint-config-recommended": "^5.0.0",
    "stylelint-config-standard": "^22.0.0",
    "stylelint-order": "^4.1.0",
    "typescript": "^4.3.5",
    "webpack": "^5.44.0"
  },
  "dependencies": {}
}
